units real
atom_style full

boundary p p p

variable hvac index 15

read_data lower.electrode extra/atom/types 1 group lower_electrode
read_data lower.electrode add append offset 1 0 0 0 0 shift 0 0 ${hvac} group upper_electrode
#^ adding a second electrode; atom type == 2

region vac block $(xlo+0.1*(xhi-xlo)) $(xhi-0.1*(xhi-xlo)) $(ylo+0.1*(xhi-xlo)) $(yhi-0.1*(yhi-ylo)) $(zlo+0.1*(zhi-zlo)) $(zhi-0.1*(zhi-zlo))

pair_style lj/charmmfsw/coul/charmmfsh 8.0 12.0 7.0

pair_coeff 1 1 5.29 2.62904 5.29 2.62904
pair_coeff 2 2 5.29 2.62904 5.29 2.62904
pair_coeff 3 3 0.0469 2.42993 0.0469 2.42993
pair_coeff 4 4 0.15 4.04468 0.15 4.04468
pair_modify mix geometric

thermo 100
thermo_style custom step temp press etotal ke pe ebond epair evdwl ecoul elong
thermo_modify   format float %15.14g norm no

minimize 0.0 1.0e-9 10000 10000

write_coeff     coeffs.setup
write_data      electrodes.setup nocoeff
#write_dump      all image minimized.png type type modify backcolor white
