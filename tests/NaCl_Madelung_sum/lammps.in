# NaCl Madelung sum (Na+ Cl-)

# 1 - init general

processors 1 1 1

units		metal
atom_style	charge

# 2 - init system

boundary	p p p
read_data	data

group		g_Na type 1
group		g_Cl type 2

set		group g_Na charge -0.5
set		group g_Cl charge 0.5


# 3 - init potential

# 1-Na, 2-Cl

pair_style	coul/long 10.0
pair_coeff      * *
kspace_style   	pppm/bsct 1.0e-4

# 4 - settings

neighbor	1.0 bin
neigh_modify	delay 0 every 1 check yes

fix		1 all nve
fix             2 all setforce 0.0 0.0 0.0

# BSCT
fix		ct all bsct  log 3  mode 2  history 10  beta 0.1  prec 0.001  coulcut 10.0  pppmprec 1.0e-4  max_iter 100  type 1 -1.084 5.0 5.0 2.0  type 2 1.084 5.0 5.0 2.0
fix_modify	ct energy yes

thermo		1
thermo_style	custom step temp epair etotal f_ct elong ecoul

timestep	0.001

dump            1 all custom 1 custom.dump id type q x y z f_ct

# 5 - run

run		15
